package practice.cafeGPT;

import java.util.ArrayList;
import java.util.Scanner;

public class Cafe {
	private String name;
	private ArrayList< Coffee> menuList = new ArrayList<>();
	
	public Cafe() {
		super();
		// TODO Auto-generated constructor stub
	}

	public Cafe(String name) {
		super();
		this.name = name;
	}

	public Cafe(String name, ArrayList<Coffee> menuList) {
		super();
		this.name = name;
		this.menuList = menuList;
	}

	public void addCoffeee(Coffee cf) {
		menuList.add(cf);
	}
	
	public void showMenu() {
		for(int i = 0; i < menuList.size(); i++) {
			System.out.println((i + 1) + ". [" + menuList.get(i) + "]");
		}
	}
	
	public void buyCoffee(Scanner sc) {
		showMenu();
		System.out.println("메뉴를 선택해주세요");
		int choice = sc.nextInt();
		if (choice == 0 && choice <= menuList.size()) {
			Coffee selectedCoffee = menuList.get(choice -1);
			System.out.println(selectedCoffee.getName());
		}
		
		
	}
	
}
